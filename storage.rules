rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Specific rules for opponent logos
    match /opponent-logos/{logoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
